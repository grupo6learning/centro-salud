<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.FarmaciaFragment"
    android:background="@color/fondo_proyecto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondo_proyecto"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LblTituloMedicinas"
                android:gravity="left"
                android:textSize="25sp"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nombreMedicinaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/LblNombreMedicina"
                    app:endIconMode="clear_text"
                    app:counterEnabled="false"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nombreMedicina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnBuscarMedicina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btnBuscar"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/fondoBarra"
                    android:layout_weight="2"/>

            </LinearLayout>

            <!-- LISTA DE MEDICAMENTOS -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/linear_layout_border"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/paracetamol" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="8dp"
                        android:hint="@string/Lblmedicamento1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="8dp"
                        android:hint="@string/Lblprecio"
                        />

                    <Button
                        android:id="@+id/btnAgregarCarrito1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btnAgregarCarrito"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="9dp"
                        android:textSize="9sp"
                        android:backgroundTint="@color/fondoBarra"
                        android:textAllCaps="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/linear_layout_border"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/nolotil" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="8dp"
                        android:textStyle="bold"
                        android:hint="@string/Lblmedicamento2"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="8dp"
                        android:hint="@string/Lblprecio"
                        />

                    <Button
                        android:id="@+id/btnAgregarCarrito2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btnAgregarCarrito"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="9dp"
                        android:textSize="9sp"
                        android:backgroundTint="@color/fondoBarra"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/linear_layout_border"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/adiro100" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="8dp"
