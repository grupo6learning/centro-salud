                        android:hint="@string/Lblmedicamento3"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="8dp"
                        android:hint="@string/Lblprecio"
                        />

                    <Button
                        android:id="@+id/btnAgregarCarrito1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btnAgregarCarrito"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="9dp"
                        android:textSize="9sp"
                        android:backgroundTint="@color/fondoBarra"
                        android:textAllCaps="false"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/linear_layout_border"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/enantyum" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginHorizontal="8dp"
                        android:textStyle="bold"
                        android:hint="@string/Lblmedicamento4"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_marginHorizontal="8dp"
                        android:hint="@string/Lblprecio"
                        />

                    <Button
                        android:id="@+id/btnAgregarCarrito2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btnAgregarCarrito"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="9dp"
                        android:textSize="9sp"
                        android:backgroundTint="@color/fondoBarra"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:padding="5dp"
                    android:background="@drawable/linear_layout_border"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/eutirox" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
